{
  "compilerOptions": {
    "module": "NodeNext", // Modern standard
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "declaration": true, // Auto-generate .d.ts files
    "noEmit": false, // Allow file generation
    "emitDeclarationOnly": true,
    "outDir": "./dist", // Output to dist/
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declarationMap": true
  },
  "include": ["**/*.ts"] // Look for .ts source files
}
